<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drumMachinePageBackgroundColor"
    tools:context=".DrumMachineFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:id="@+id/beatsGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/beat1"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/rectangle_default"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="beat1" />
            <ImageView
                android:id="@+id/beat2"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/rectangle_default"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="beat2"/>
            <ImageView
                android:id="@+id/beat3"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/rectangle_default"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="beat3"/>
            <ImageView
                android:id="@+id/beat4"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/rectangle_default"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="beat4"/>
            <ImageView
                android:id="@+id/beat5"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/rectangle_default"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="beat5"/>
            <ImageView
                android:id="@+id/beat6"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/rectangle_default"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="beat6"/>
            <ImageView
                android:id="@+id/beat7"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/rectangle_default"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="beat7"/>
            <ImageView
                android:id="@+id/beat8"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/rectangle_default"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="beat8"/>
        </LinearLayout>

        <!-- Snippet from "Add buttons" section goes here. -->
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/play_button"/>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>
